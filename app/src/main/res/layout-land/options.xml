<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/options_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:gravity="left"
                android:text="@string/display_options"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:gravity="left"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/normal_cards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/normal_cards" />

                <RadioButton
                    android:id="@+id/big_cards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/big_cards" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:gravity="left"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/display_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="22dp"
                    android:text="@string/display_time" />

                <CheckBox
                    android:id="@+id/sound_effects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/sound_effects" />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:gravity="left"
                android:text="@string/solitaire_options"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:gravity="left"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/style_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/normal" />

                <RadioButton
                    android:id="@+id/style_vegas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vegas" />
            </RadioGroup>

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:gravity="left"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/deal_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deal_3" />

                <RadioButton
                    android:id="@+id/deal_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deal_1" />

            </RadioGroup>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:gravity="left"
                android:text="@string/spider_options"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:visibility="visible" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:gravity="left"
                android:orientation="horizontal"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/suits_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/suits_4" />

                <RadioButton
                    android:id="@+id/suits_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/suits_2" />

                <RadioButton
                    android:id="@+id/suits_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/suits_1" />

            </RadioGroup>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="@string/auto_move"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:visibility="visible" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:gravity="left"
                android:orientation="horizontal"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/auto_move_always"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/always" />

                <RadioButton
                    android:id="@+id/auto_move_fling_only"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fling_only" />

                <RadioButton
                    android:id="@+id/auto_move_never"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/never" />

            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:paddingStart="20dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dip"
                android:minWidth="100dp"
                android:text="@string/save" />

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:minWidth="100dp"
                android:text="@string/cancel" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
    

